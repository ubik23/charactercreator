{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2016",
      "es2017"
    ],
    "outDir": "dist",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "target": "es5",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}