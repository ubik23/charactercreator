{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2016",
            "es2017"
        ],
        "module": "system",
        "noImplicitAny": true,
        "outDir": "dist",
        "outFile": "target/dist/bundle.js",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "sourceMap": true,
        "target": "es5",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/dev.tsx",
        "src/components/App.tsx",
        "node_modules"
    ]
}